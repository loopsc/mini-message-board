<html>

<head>
    <title>New Message</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <main class="content">
        <h1 class="heading">New Message</h1>

        <%- include('navbar') %>
            <%- include('./partials/errors.ejs') %>

                <form action="/new" method="POST" class="new-msg-form">
                    <label class="input-group">
                        Name
                        <input required placeholder="Ruben" class="msg-input-field" name="messageName" type="text"
                            value="<%= locals.oldInput ? oldInput.messageName : '' %>">
                    </label>
                    <label class="input-group">
                        Text
                        <textarea rows="5" required placeholder="What's on your mind?" class="msg-input-field"
                            name="messageText"><%= locals.oldInput ? oldInput.messageText : '' %></textarea>
                    </label>
                    <button type="submit">Submit</button>
                </form>
    </main>

</body>

</html>