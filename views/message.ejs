<html>

<head>
    <title>
        Message Details
    </title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <main class="content">
        <%- include("navbar",{links:links}) %>

            <div class="msg-details">
                <div class="msg-header">
                    <h1>
                        <%= message.username %>
                    </h1>
                    <time datetime="<%= message.added.toISOString() %>" class="msg-date">
                        <%= new Intl.DateTimeFormat("en-GB", { day: "2-digit" , month: "2-digit" , year: "numeric" ,
                            hour: "2-digit" , minute: "2-digit" , second: "2-digit" , hour12: true
                            }).format(message.added) %>
                    </time>
                </div>
                <p>
                    <%= message.text %>
                </p>
            </div>

    </main>
</body>

</html>